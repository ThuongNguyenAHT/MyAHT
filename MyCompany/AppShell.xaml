<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyCompany.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyCompany"
    xmlns:view="clr-namespace:MyCompany">

    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    
    <ShellContent Title="Trang chủ" ContentTemplate="{DataTemplate view:Menu}" Icon="home_icon.png"/>
    <!--<ShellContent Title="Tìm kiếm" ContentTemplate="{DataTemplate view:SearchPage}" Icon="search_icon.png"/>-->
    <ShellContent Title="Thông báo" ContentTemplate="{DataTemplate view:NotificationPage}" Icon="notifications_icon.png"/>
    <ShellContent Title="Cá nhân" ContentTemplate="{DataTemplate view:ProfilePage}" Icon="profile_icon.png" />
    

</Shell>
